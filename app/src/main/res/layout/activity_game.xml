<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warsaw_1"
    android:weightSum="1"
    android:id="@+id/layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pointDescription"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.75"
        android:text="Description of current point"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="15dp"
        android:typeface="monospace"
        android:background="#4Dffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dystans do obecnego punku: 5 km"
        android:id="@+id/currentDistance"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:typeface="monospace"
        android:background="#4Dffffff"
        android:textSize="18dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#4Dffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14"
        android:weightSum="1"
        android:background="#4Dffffff">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/x"
            android:layout_weight="0.34"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/y"
            android:layout_weight="0.55"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zakończ grę"
        android:id="@+id/button_finish_game"
        android:background="#a6dfd9d9"
        android:typeface="normal"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"/>

</LinearLayout>