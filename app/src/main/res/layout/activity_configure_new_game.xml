<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warsaw_1"
    android:weightSum="1"
    android:gravity="center"
    android:id="@+id/activityConfigureNewGame_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/activityConfigureNewGame_title_label"
        android:id="@+id/activityConfigureNewGame_title"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/activityConfigureNewGame_elementCategoryChoice_label"
        android:id="@+id/activityConfigureNewGame_elementCategoryChoice"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:typeface="monospace"
        android:background="#4Dffffff"
        android:textStyle="bold"
        android:layout_weight="0.10" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:gravity="center_horizontal"
        android:background="#4Dffffff">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activityConfigureNewGame_checkbox_trees_label"
            android:id="@+id/activityConfigureNewGame_checkbox_trees"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:clickable="true"
            android:typeface="monospace"
            android:checked="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activityConfigureNewGame_checkbox_shrubs_label"
            android:id="@+id/activityConfigureNewGame_checkbox_shrubs"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:clickable="true"
            android:typeface="monospace" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activityConfigureNewGame_checkbox_apartments_label"
            android:id="@+id/activityConfigureNewGame_checkbox_apartments"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:enabled="false"
            android:typeface="monospace" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/activityConfigureNewGame_numberOfPlayers_label"
        android:id="@+id/activityConfigureNewGame_numberOfPlayers"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#4Dffffff"
        android:layout_weight="0.10"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/activityConfigureNewGame_numberOfPlayers_input"
        android:focusableInTouchMode="false"
        android:background="#99ffffff"
        android:text="@string/activityConfigureNewGame_numberOfPlayers_input_label"
        android:textAlignment="center"
        android:digits="1234567890"
        android:textSize="15dp"
        android:enabled="false"
        android:focusable="false"
        android:editable="false"
        android:textColor="#000000"
        android:clickable="true"
        android:typeface="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/activityConfigureNewGame_numberOfElements_label"
        android:id="@+id/activityConfigureNewGame_numberOfElements"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:typeface="monospace"
        android:textStyle="bold"
        android:background="#4Dffffff"
        android:layout_weight="0.10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/activityConfigureNewGame_numberOfElements_input"
        android:background="#99ffffff"
        android:text="@string/activityConfigureNewGame_numberOfElements_input_label"
        android:textAlignment="center"
        android:digits="1234567890"
        android:textSize="15dp"
        android:editable="true"
        android:typeface="monospace"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityConfigureNewGame_searchRadius"
        android:textColor="#000000"
        android:text="@string/activityConfigureNewGame_searchRadius_label"
        android:textAlignment="center"
        android:selectAllOnFocus="false"
        android:textStyle="bold"
        android:background="#4Dffffff"
        android:layout_weight="0.10"
        android:typeface="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/activityConfigureNewGame_currentRadius_label"
        android:id="@+id/activityConfigureNewGame_currentRadius"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:background="#4Dffffff"
        android:typeface="monospace" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/activityConfigureNewGame_currentRadius_begin_label"
            android:id="@+id/activityConfigureNewGame_currentRadius_begin"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:background="#4Dffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/activityConfigureNewGame_currentRadius_middle_label"
            android:id="@+id/activityConfigureNewGame_currentRadius_middle"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:background="#4Dffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/activityConfigureNewGame_currentRadius_end_label"
            android:id="@+id/activityConfigureNewGame_currentRadius_end"
            android:textColor="#000000"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:background="#4Dffffff"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityConfigureNewGame_gameRadiusBar"
        android:background="#4Dffffff"
        android:progress="50" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:background="#4Dffffff"
        android:layout_weight="0.06" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activityConfigureNewGame_button_startNewGame_label"
        android:id="@+id/activityConfigureNewGame_button_startNewGame"
        android:background="#a6dfd9d9"
        android:typeface="normal"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold">
        <requestFocus />
    </Button>

</LinearLayout>