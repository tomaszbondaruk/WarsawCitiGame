<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warsaw_1"
    android:weightSum="1"
    android:gravity="center"
    android:id="@+id/layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Skonfiguruj swoją grę"
        android:id="@+id/textView3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wybierz kategorie elementow"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:typeface="monospace"
        android:background="#4Dffffff"
        android:textStyle="bold"
        android:layout_weight="0.10" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:gravity="center_horizontal"
        android:background="#4Dffffff">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drzewa"
            android:id="@+id/checkTrees"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:clickable="true"
            android:typeface="monospace"
            android:checked="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krzewy"
            android:id="@+id/checkShrubs"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:clickable="true"
            android:typeface="monospace" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokale"
            android:id="@+id/checkApartments"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:enabled="false"
            android:typeface="monospace" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Liczba graczy"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#4Dffffff"
        android:layout_weight="0.10"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numberOfPlayersInput"
        android:focusableInTouchMode="false"
        android:background="#99ffffff"
        android:text="Wprowadź liczbę graczy"
        android:textAlignment="center"
        android:digits="1234567890"
        android:textSize="15dp"
        android:enabled="false"
        android:focusable="false"
        android:editable="false"
        android:textColor="#000000"
        android:clickable="true"
        android:typeface="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Liczba elementów"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:typeface="monospace"
        android:textStyle="bold"
        android:background="#4Dffffff"
        android:layout_weight="0.10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/noElementsInput"
        android:background="#99ffffff"
        android:text="10"
        android:textAlignment="center"
        android:digits="1234567890"
        android:textSize="15dp"
        android:editable="true"
        android:typeface="monospace"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText13"
        android:textColor="#000000"
        android:text="Wybierz promień poszukiwań"
        android:textAlignment="center"
        android:selectAllOnFocus="false"
        android:textStyle="bold"
        android:background="#4Dffffff"
        android:layout_weight="0.10"
        android:typeface="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Obecny promień poszukiwań: 5km"
        android:id="@+id/currentRadius"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:background="#4Dffffff"
        android:typeface="monospace" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0km"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:background="#4Dffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5km"
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:background="#4Dffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10km"
            android:id="@+id/textView8"
            android:textColor="#000000"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:background="#4Dffffff"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gameRadiusBar"
        android:background="#4Dffffff"
        android:progress="50" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:background="#4Dffffff"
        android:layout_weight="0.06" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rozpocznij grę!"
        android:id="@+id/start_new_game_button"
        android:background="#a6dfd9d9"
        android:typeface="normal"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold">
        <requestFocus />
    </Button>

</LinearLayout>